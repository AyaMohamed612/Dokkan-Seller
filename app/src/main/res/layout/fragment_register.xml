<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/logobkg"
    android:gravity="center">


    <EditText
        android:id="@+id/shopnameId"
        android:layout_width="@dimen/width_270"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_100"
        android:drawableLeft="@drawable/ic_user_name"
        android:drawablePadding="@dimen/padding_60"
        android:hint="Shop Name"
        android:paddingLeft="@dimen/paddingLeft_10"
        android:textSize="@dimen/text_size_15"
        android:textColorHint="@color/color_ecddcd"
        android:backgroundTint="@color/color_ecddcd"
        android:shadowColor="@color/color_ecddcd"
        android:textColor="@color/color_ecddcd"/>




    <EditText
        android:id="@+id/emailId"
        android:layout_width="@dimen/width_270"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_11"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/padding_60"
        android:hint="E-mail"
        android:paddingLeft="@dimen/paddingLeft_10"
        android:textSize="@dimen/text_size_15"
        android:textColorHint="@color/color_ecddcd"
        android:backgroundTint="@color/color_ecddcd"
        android:shadowColor="@color/color_ecddcd"
        android:textColor="@color/color_ecddcd"
        />
    <EditText
        android:id="@+id/passwordId"
        android:layout_width="@dimen/width_270"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_11"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="@dimen/padding_60"
        android:hint="Password"
        android:paddingLeft="@dimen/paddingLeft_10"
        android:textSize="@dimen/text_size_15"
        android:textColorHint="@color/color_ecddcd"
        android:backgroundTint="@color/color_ecddcd"
        android:shadowColor="@color/color_ecddcd"
        android:textColor="@color/color_ecddcd" />



    <EditText
        android:id="@+id/confPassId"
        android:layout_width="@dimen/width_270"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_11"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="@dimen/padding_60"
        android:hint="Confirm Password"
        android:paddingLeft="@dimen/paddingLeft_10"
        android:textSize="@dimen/text_size_15"
        android:textColorHint="@color/color_ecddcd"
        android:backgroundTint="@color/color_ecddcd"
        android:shadowColor="@color/color_ecddcd"
        android:textColor="@color/color_ecddcd"/>


    <RelativeLayout
        android:layout_width="@dimen/width_260"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/paddind_10"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkbox_reg"
            android:layout_width="@dimen/width_25"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_ecddcd"
            android:scaleX="0.60"
            android:scaleY="0.60"
            android:layout_marginTop="@dimen/margin_23"/>

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i agree to the terms and conditions."
            android:layout_toRightOf="@id/checkbox_reg"
            android:textColor="@color/color_ecddcd"
            android:textSize="@dimen/text_size_13"
            android:layout_marginTop="@dimen/margin_28"
            android:textColorHint="@color/color_ecddcd"/>
        <View
            android:layout_width="@dimen/width_130"
            android:layout_height="@dimen/height_1"
            android:layout_marginLeft="@dimen/margin_100"
            android:layout_below="@+id/tv_terms"
            android:background="@color/color_ecddcd" />

    </RelativeLayout>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="@dimen/width_170"
        android:layout_height="@dimen/height_45"
        android:background="@drawable/button"
        android:text="Register"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/margin_50"
        android:textStyle="bold"
        android:gravity="center"


        />
</LinearLayout>