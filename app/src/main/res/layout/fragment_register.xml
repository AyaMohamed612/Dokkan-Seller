<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/logobkg">



    <EditText
        android:id="@+id/shopnameId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="165dp"
        android:drawableLeft="@drawable/ic_user_name"
        android:drawablePadding="90dp"
        android:hint="Shop Name"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textSize="11sp"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorAccent"




        />

    <EditText
        android:id="@+id/emailId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="11dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="90dp"
        android:hint="E-mail"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:textSize="11sp"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorAccent"


        />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="11dp"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="90dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="11sp"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorAccent"



        />

    <EditText
        android:id="@+id/confPassId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="11dp"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="90dp"
        android:hint="Confirm Password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="11sp"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorAccent"



        />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:paddingTop="10dp">

        <CheckBox
            android:id="@+id/checkbox_reg"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:scaleX="0.60"
            android:scaleY="0.60"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i agree to the terms and conditions."
            android:layout_toRightOf="@id/checkbox_reg"
            android:textColor="@color/colorAccent"
            android:textSize="11sp"
            android:layout_marginTop="28dp"
            android:textColorHint="@color/colorAccent"/>

        <View
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="41dp"
            android:background="@color/colorAccent" />


    </RelativeLayout>


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:background="@drawable/button"
        android:text="Register"
        android:textColor="#9a7c84"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:gravity="center"



        />

</LinearLayout>

