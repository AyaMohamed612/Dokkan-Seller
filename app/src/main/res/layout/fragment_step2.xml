<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#f8f6f7"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_add_a_photo"
        app:civ_border_color="#9a7c84"
        app:civ_border_width="1dp" />


    <Button
        android:id="@+id/categ_butt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edittex"
        android:layout_marginTop="17dp"
        android:paddingRight="40dp"
        android:text="Select Your Categories"
        android:textSize="9sp"
        android:textColor="#f8f6f7"
        />

    <EditText
        android:id="@+id/aboutId"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/edittex"
        android:hint="About"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:gravity="start|top"
        android:padding="5dp"
        android:paddingStart="11dp"
        android:textColorHint="#f8f6f7"
        android:textSize="11sp"/>


    <EditText
        android:id="@+id/policiesId"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittex"
        android:gravity="start|top"
        android:hint="policies"
        android:inputType="text"
        android:lines="8"
        android:padding="5dp"
        android:paddingStart="11dp"
        android:paddingLeft="10dp"
        android:textColorHint="#f8f6f7"
        android:textSize="11sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button2"
            android:textSize="11sp"
            android:text="Pervious"
            android:textAllCaps="false"
            android:textColor="#f8f6f7"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button2"
            android:textSize="11sp"
            android:text="DONE :))"
            android:textAllCaps="false"
            android:textColor="#f8f6f7"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>