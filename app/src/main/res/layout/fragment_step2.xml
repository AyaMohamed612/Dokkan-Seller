<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#f8f6f7"
    android:gravity="center">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/width_130"
        android:layout_height="@dimen/height_100"
        android:layout_marginTop="@dimen/margin_45"
        android:src="@drawable/profilepic" />

    <Button
        android:id="@+id/categ_butt"
        android:layout_width="@dimen/width_220"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/edittex"
        android:layout_marginTop="@dimen/margin_17"
        android:paddingEnd="@dimen/padding_40"
        android:text="@string/select_your_categories"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_white"
        />
    <EditText
        android:id="@+id/bioId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:layout_marginTop="@dimen/margin_18"
        android:background="@drawable/edittex"
        android:hint="@string/bio"
        android:paddingLeft="@dimen/paddind_10"
        android:gravity="start|top"
        android:padding="@dimen/padding_5"
        android:paddingStart="@dimen/paddind_10"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"/>

    <EditText
        android:id="@+id/aboutId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:layout_marginTop="@dimen/margin_18"
        android:background="@drawable/edittex"
        android:hint="@string/about"
        android:paddingLeft="@dimen/paddind_10"
        android:gravity="start|top"
        android:padding="@dimen/padding_5"
        android:paddingStart="@dimen/paddind_10"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"/>

    <EditText
        android:id="@+id/policiesId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_120"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/edittex"
        android:gravity="start|top"
        android:hint="@string/policies"
        android:lines="8"
        android:padding="@dimen/padding_5"
        android:paddingStart="@dimen/paddind_10"
        android:paddingLeft="@dimen/paddind_10"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_2"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_50">


        <Button
            android:id="@+id/btnDone"
            android:layout_width="@dimen/width_120"
            android:layout_height="@dimen/height_45"
            android:background="@drawable/button3"
            android:textSize="@dimen/text_size_13"
            android:text="@string/done"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>