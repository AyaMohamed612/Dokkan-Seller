<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10">


        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Done "
            android:layout_gravity="end"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_15">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/width_100"
                android:layout_height="@dimen/height_100"
                android:src="@drawable/icon5"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:id="@+id/img_shop"
                android:layout_marginEnd="@dimen/margin_5"
                />
            <ImageView
                android:id="@+id/edit_photo"
                android:layout_width="@dimen/width_30"
                android:layout_height="@dimen/height_30"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:layout_below="@id/phone_num_et"
                android:layout_toStartOf="@id/rating_barprofile"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_10"
                />

            <TextView
                android:id="@+id/name_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_shop"
                android:text="@string/shop_name"
                android:paddingStart="@dimen/padding_15"
                android:textSize="@dimen/textSize_20"
                android:textColor="@color/color_black"
                />

            <EditText
                android:id="@+id/shop_name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_shop"
                android:paddingStart="@dimen/padding_15"
                android:textSize="@dimen/textSize_20"
                android:textColor="@color/color_black"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="@dimen/margin_5"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/edit_shopname"
                android:layout_width="@dimen/width_20"
                android:layout_height="@dimen/height_20"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="end"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_toEndOf="@id/name_shop"
                android:layout_marginStart="@dimen/margin_5"
                />


            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name_et"
                android:layout_toEndOf="@id/img_shop"
                android:text="01001615842"
                android:textSize="@dimen/textSize_13"
                android:paddingStart="@dimen/padding_15"
                android:paddingTop="@dimen/padding_5"
                />

            <ImageView
                android:id="@+id/edit_phone"
                android:layout_width="@dimen/width_15"
                android:layout_height="@dimen/height_20"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="end"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_below="@id/shop_name_et"
                android:layout_toEndOf="@id/phone_num"
                android:layout_marginStart="@dimen/margin_5"
                />
            <EditText
                android:id="@+id/phone_num_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_shop"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_below="@id/name_shop"
                android:paddingTop="@dimen/padding_5"
                android:paddingStart="@dimen/padding_15"
                android:textSize="@dimen/textSize_20"
                android:textColor="@color/color_black"
                android:background="@drawable/edit_text_bg"
                android:visibility="invisible"

                />


            <RatingBar
                android:id="@+id/rating_barprofile"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_num_et"
                android:progressTint="@color/colorPrimary"
                android:layout_toEndOf="@id/img_shop"
                android:numStars="5"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:layout_marginStart="@dimen/margin_15"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_barprofile"
                android:layout_toEndOf="@id/img_shop"
                android:drawableStart="@drawable/ic_location"
                android:text="@string/location_name"
                android:textSize="@dimen/textsize_10"
                android:paddingTop="@dimen/padding_5"
                android:paddingStart="@dimen/padding_15"
                android:paddingBottom="@dimen/padding_5"
                />
            <ImageView
                android:id="@+id/edit_location"
                android:layout_width="@dimen/width_15"
                android:layout_height="@dimen/height_15"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="end"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_below="@id/rating_barprofile"
                android:layout_toEndOf="@id/location"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                />

            <EditText
                android:id="@+id/location_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:layout_toEndOf="@id/img_shop"
                android:layout_below="@id/rating_barprofile"
                android:paddingStart="@dimen/padding_15"
                android:textSize="@dimen/textsize_10"
                android:hint="@string/location_name"
                android:textColor="@color/color_black"
                android:background="@drawable/edit_text_bg"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/num_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_et"
                android:layout_toEndOf="@id/img_shop"
                android:text="900 sale on app since 2010"
                android:textSize="@dimen/textsize_10"
                android:layout_marginTop="@dimen/margin_5"
                android:paddingStart="@dimen/padding_15"
                />

            <View
                android:id="@+id/line_view"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/num_sale"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_below="@+id/line_view"
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio :"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/shop_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/bio"
                android:layout_below="@id/line_view"
                android:textSize="@dimen/text_size_15"
                android:text="Hey everyone I sell really beautiull items"
                android:padding="@dimen/padding_5"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/shop_desc_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/bio"
                android:layout_below="@id/line_view"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/edit_text_bg"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/edit_bio"
                android:layout_width="@dimen/width_20"
                android:layout_height="@dimen/height_20"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="end"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_below="@id/line_view"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_toEndOf="@id/shop_desc"
                android:layout_marginStart="@dimen/margin_5"
                />

        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_desc"
                android:background="@color/color_e6e4e4"
                android:layout_marginTop="@dimen/margin_5"
                android:padding="@dimen/padding_5">

                <TextView
                    android:id="@+id/about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:text="@string/about"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_6a4e5d">
                </TextView>
                <ImageView
                    android:id="@+id/edit_about"
                    android:layout_width="@dimen/width_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/about_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:layout_below="@id/relative_about"
                android:padding="@dimen/padding_10"
                />
        <EditText
            android:id="@+id/about_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_below="@id/relative_about"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/edit_text_bg"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/relative_policies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_tv"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/color_e6e4e4"
            android:padding="@dimen/padding_5">

            <TextView
                android:id="@+id/policies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/policies"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_6a4e5d">
            </TextView>
            <ImageView
                android:id="@+id/edit_policies"
                android:layout_width="@dimen/width_20"
                android:layout_height="@dimen/height_20"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="end"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/policies_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_below="@id/relative_policies"
            android:padding="@dimen/padding_10"
            />
        <EditText
            android:id="@+id/policies_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_below="@id/relative_policies"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/edit_text_bg"
            android:visibility="gone"
            />


        <RelativeLayout
            android:id="@+id/relative_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/policies_tv"
            android:layout_marginTop="@dimen/margin_5"
            android:padding="@dimen/padding_5">

        <TextView
                android:id="@+id/relatedlinks_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Related Links"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_20"
                android:padding="@dimen/padding_10"
                />
        <ImageView
            android:id="@+id/edit_relatedlinks"
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_alignParentEnd="true"
            />
        </RelativeLayout>


            <LinearLayout
                android:layout_below="@id/relatedlinks_tv"
                android:id="@+id/facebook"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/height_30"
                    android:src="@drawable/facebook"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_5"
                    />
                <Button
                    android:id="@+id/tv_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@android:color/transparent"
                    android:text="Facebook"
                    android:textAlignment="textStart"
                    android:paddingStart="@dimen/padding_10"
                    android:drawableEnd="@drawable/right_arrow"/>


            </LinearLayout>

        <EditText
            android:id="@+id/fb_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_50"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/edit_text_bg"
            android:visibility="gone"
            />

            <LinearLayout
                android:layout_below="@id/facebook"
                android:id="@+id/insta"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/height_30"
                    android:src="@drawable/instagram"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_5"
                    />

                <Button
                    android:id="@+id/tv_insta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:textAlignment="textStart"
                    android:background="@android:color/transparent"
                    android:text="@string/instgram"
                    android:paddingStart="@dimen/padding_10"
                    android:drawableEnd="@drawable/right_arrow"/>
            </LinearLayout>
        <EditText
            android:id="@+id/insta_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_50"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/edit_text_bg"
            android:visibility="gone"
            />


        <RelativeLayout
            android:id="@+id/relative_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/policies_tv"
            android:background="@color/color_e6e4e4"
            android:layout_marginTop="@dimen/margin_5"
            android:padding="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/reviews"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_6a4e5d">
            </TextView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_review"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:layout_height="@dimen/height_500"
            android:paddingStart="@dimen/padding_15"
            android:paddingEnd="@dimen/padding_15"
            android:layout_below="@id/relative_review"
            >

        </androidx.recyclerview.widget.RecyclerView>





    </LinearLayout>

</androidx.core.widget.NestedScrollView>