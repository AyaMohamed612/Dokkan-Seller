<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_300dp"
            app:sliderAutoCycleEnabled="false"
            app:sliderIndicatorGravity="center_horizontal|center"
            app:sliderIndicatorMarginTop="@dimen/margin_top_110"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorRadius="@dimen/radious_2"
            app:sliderIndicatorSelectedColor="@color/indicator_color"
            app:sliderIndicatorUnselectedColor="#E6E4E4"
            app:sliderStartAutoCycle="false" />

        <Button
            android:id="@+id/email_button"
            android:layout_width="@dimen/witdth_20"
            android:layout_height="@dimen/height_20"
            android:layout_marginTop="@dimen/margin_top_10"
            android:layout_marginRight="@dimen/margin_right_15"
            android:layout_marginEnd="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_email_black_24dp" />
        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/width_27"
            android:layout_height="@dimen/height_27"
            android:layout_marginTop="@dimen/margin_top_10"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/margin_start_10"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="@dimen/margin_bottom_8"
            android:layout_marginTop="@dimen/margin_top_263"
            android:elevation="@dimen/elevation_7"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="@dimen/card_redius_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageSlider"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_25"
                android:layout_marginStart="@dimen/margin_start_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_17"
                    android:layout_marginLeft="@dimen/margin_17"
                    android:text="@string/add_product"
                    android:textColor="@color/text_color_6a4e5d"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/width_50"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginStart="@dimen/layout_dimens_150"
                    android:layout_marginTop="@dimen/margin_top_3"
                    android:background="@drawable/back_add_photo">

                    <ImageView
                        android:id="@+id/add_photo"
                        android:layout_width="@dimen/width_39"
                        android:layout_height="@dimen/height_39"
                       android:layout_margin="@dimen/margin_11"
                        android:src="@drawable/ic_add_a_photo_black_24dp">
                    </ImageView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_444"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_120"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/width_140"
                        android:layout_height="@dimen/height_40"
                        android:layout_marginLeft="@dimen/margin_right_40"
                        android:layout_marginStart="@dimen/margin_start_40"
                        android:layout_marginTop="@dimen/margin_top_62"
                        android:background="@color/bacground_fff"
                        app:cardCornerRadius="@dimen/card_radius_12">

                        <EditText
                            android:id="@+id/Item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bacground_fff"
                            android:hint="@string/item_name"
                            android:padding="@dimen/padding_10"
                            android:textStyle="bold"
                            android:textColor="@color/bacground_ac9fa6"
                            android:textSize="@dimen/text_size_15" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/width_120"
                        android:layout_height="@dimen/height_40"
                        android:layout_marginLeft="@dimen/margin_left_18"
                        android:layout_marginStart="@dimen/margin_start_18"
                        android:layout_marginTop="@dimen/margin_top_62"
                        android:background="@color/bacground_fff"
                        app:cardCornerRadius="@dimen/card_radius_12">

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bacground_fff"
                            android:hint="@string/_00_00"
                            android:padding="@dimen/padding_10"
                            android:inputType="number"
                            android:textColor="@color/text_color_6a4e5d"
                            android:textSize="@dimen/text_size_15"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginLeft="@dimen/margin_left_40"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:layout_marginRight="@dimen/margin_right_40"
                    android:background="@color/bacground_fff"
                    app:cardCornerRadius="@dimen/card_radius_12">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50"
                        android:background="@color/bacground_fff"
                        android:hint="@string/quick_description"
                        android:padding="@dimen/padding_10"
                        android:textStyle="bold"
                        android:inputType="textMultiLine"
                        android:textColor="@color/bacground_ac9fa6"
                        android:textSize="@dimen/text_size_15" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginLeft="@dimen/margin_left_40"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_right_40"
                    android:background="@color/bacground_fff"
                    app:cardCornerRadius="@dimen/card_radius_12">

                    <EditText
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50"
                        android:background="@color/bacground_fff"
                        android:hint="@string/size"
                        android:textStyle="bold"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/text_color_6a4e5d"
                        android:textSize="@dimen/text_size_15" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_70"
                    android:layout_marginLeft="@dimen/margin_left_40"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_right_40"
                    android:background="@color/bacground_fff"
                    app:cardCornerRadius="@dimen/card_radius_12">

                    <EditText
                        android:id="@+id/materials"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_70"
                        android:background="@color/bacground_fff"
                        android:hint="@string/materials"
                        android:padding="@dimen/padding_10"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_6a4e5d"
                        android:textSize="@dimen/text_size_15" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/width_120"
                    android:layout_height="@dimen/height_33"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_top_20"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:background="@color/bacground_ac9fa6"
                    app:cardCornerRadius="@dimen/card_radius_15">

                    <Button
                        android:id="@+id/post_butt"
                        android:layout_width="@dimen/width_120"
                        android:layout_height="@dimen/height_33"
                        android:background="@drawable/back_post_button"
                        android:shadowColor="@color/shadow_color_ac9fa6"
                        android:text="@string/post"
                        android:textColor="@color/text_color_fff"
                        android:textSize="@dimen/text_size_15"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:textStyle="bold">

                    </Button>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>

